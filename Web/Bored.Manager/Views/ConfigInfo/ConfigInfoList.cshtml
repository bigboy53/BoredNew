@using Bored.Manager.Helper
@using PageHelper
@using Bored.Manager.Core
@{
    Layout = "~/Views/Shared/Main_LayoutPage.cshtml";
    var pageModel = PageStruct.InitList("ConfigInfo", Url.Action("ConfigInfoEdit", "ConfigInfo"), Url.Action("ConfigInfo_List", "ConfigInfo"), Url.Action("ConfigInfo_Delete", "ConfigInfo"));
}

<div class="header">
    <span>
        <span class="ico gray window"></span>
        配置列表
    </span>
</div>
<div class="clear"></div>
<!--具体内容-->
<div class="content">
    <!--具体内容标题--->
    <div class="boxtitle">
        <span class="ico gray audio_knob"></span>
        配置列表
    </div>
    <form>
        <div class="load_page">
            <ul class="uibutton-group">
                <li>
                    @HtmlStringHelper.AddButton(pageModel.AddUrl)
                </li>
                <li>
                    @HtmlStringHelper.DeleteButton(pageModel.DeleteAction, pageModel.TableId)
                </li>
            </ul>
            <div class="table_search">
                <span>标题：</span>
                @HtmlStringHelper.Text("name", TextSize.small)
                <span>类型：</span>
                @HtmlStringHelper.Select("type",CommonHelper.GetConfigList())
                @HtmlStringHelper.SearchButton(pageModel.SearchBtnId, pageModel.TableId)
            </div>
            <div class="tableName toolbar">
                <h3>配置列表</h3>
                @(
 HtmlStringHelper.GridTable(pageModel.TableId, pageModel.ListAction)
            .SelectAllBtn("ID")
            .Column("Name", "标题", 10)
            .Column("TypeTxt", "类型", 10)
            .Column("CreateTimeTxt", "创建时间", 10)
            .EditColumn("ID", pageModel.ModifyUrl)
            .DeleteColumn("ID", pageModel.DeleteAction)
                )
            </div>
        </div>
    </form>
</div>