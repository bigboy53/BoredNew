@using PageHelper
@using Bored.Manager.Core
@{
    Layout = "~/Views/Shared/Main_LayoutPage.cshtml";
    var pageModel = PageStruct.InitList("manager", Url.Action("ManageEdit", "Manager"), Url.Action("Manage_List", "Manager"), Url.Action("Mange_Delete", "Manager"));
}

<div class="header">
    <span>
        <span class="ico gray window"></span>
        管理员列表
    </span>
</div>
<div class="clear"></div>
<!--具体内容-->
<div class="content">
    <!--具体内容标题--->
    <div class="boxtitle">
        <span class="ico gray audio_knob"></span>
        管理员列表
    </div>
    <form>
        <div class="load_page">
            <ul class="uibutton-group">
                <li>
                    @HtmlStringHelper.AddButton(pageModel.AddUrl)
                </li>
                <li>
                    @HtmlStringHelper.DeleteButton(pageModel.DeleteAction, pageModel.TableId)
                </li>
            </ul>
            <div class="table_search">
                <span>姓名：</span>
                @HtmlStringHelper.Text("name", TextSize.medium)
                @HtmlStringHelper.SearchButton(pageModel.SearchBtnId,pageModel.TableId)
            </div>
            <div class="tableName toolbar">
                <h3>管理员列表</h3>
                @(
 HtmlStringHelper.GridTable(pageModel.TableId, pageModel.ListAction)
        .SelectAllBtn("ID")
        .Column("UName", "用户名", 10)
        .Column("RoleName", "角色名称", 10)
        .Column("Email", "电子邮件", 10)
        .Column("RelName", "真实名字", 10)
        .Column("Tel", "联系电话", 10)
        .EditColumn("ID", pageModel.ModifyUrl)
        .DeleteColumn("ID", pageModel.DeleteAction)
                )
            </div>
        </div>
    </form>

</div>
<script type="text/javascript">

</script>