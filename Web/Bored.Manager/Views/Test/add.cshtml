@using Bored.Manager.Helper
@using Bored.Manager.View.Helper
@using PageHelper
@{
    var pageModel = PageStruct.InitEdit("test", "/test/addr", "/test/edit", "/test/getModel");
    var id = pageModel.GetModifyId("id");
}
<script type="text/javascript" charset="utf-8" src="/Content/js/UEditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/Content/js/UEditor/ueditor.all.min.js"> </script>
<!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
<!--这里加载的语言文件会覆盖你在配置项目里添加的语言类型，比如你在配置项目里配置的是英文，这里加载的中文，那最后就是中文-->
<script type="text/javascript" charset="utf-8" src="/Content/js/UEditor/lang/zh-cn/zh-cn.js"></script>
<ul class="uibutton-group">
    <li>
        @HtmlStringHelper.ReturnListButton(pageModel.TableId)
    </li>
    <li>
        @HtmlStringHelper.ResetForm()
    </li>
</ul>
<form id="@pageModel.FormId" class="validation">
    @HtmlStringHelper.HiddenText("ID")
    <div class="section ">
        <label>用户名</label>
        <div>
            @HtmlStringHelper.Text("UName", TextSize.medium, ValidationReg.required, "", "用户名", "请输入用户名")
        </div>
    </div>
    <div class="section">
        <label>密码<small>输入密码</small></label>
        <div>
            @HtmlStringHelper.Text("Password", TextSize.medium, ValidationReg.required, "", "密码", "请输入密码")
        </div>
    </div>
    <div class="section">
        <label>授权码<small>输入授权码</small></label>
        <div>
            @HtmlStringHelper.Text("AuthCode", TextSize.medium, ValidationReg.required, "", "密码", "请输入授权码")
        </div>
    </div>
    <div class="section">
        <label>电子邮件</label>
        <div>
            @HtmlStringHelper.Text("Email", TextSize.medium, ValidationReg.required, "")
        </div>
    </div>
    <div class="section">
        <label>姓名</label>
        <div>
            @HtmlStringHelper.Text("RelName", TextSize.medium, ValidationReg.required, "")
        </div>
    </div>
    <div class="section">
        <label>电话</label>
        <div>
            @HtmlStringHelper.Text("Tel", TextSize.medium, ValidationReg.required, "")
        </div>
    </div>
    <div class="section">
        <label>电话</label>
        <div>
            @HtmlStringHelper.Select("not",new List<SelectItem>{new SelectItem("你好","1")})
        </div>
    </div>
    <div class="section last">
        <div>
            @HtmlStringHelper.SubmitButton(pageModel.FormId)
        </div>
    </div>
</form>
@HtmlStringHelper.InitControlSpeciality(pageModel.FormId, pageModel.OperationType, pageModel.GetModelAction, id, pageModel.AddAction, pageModel.EditAction)

